<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capture" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppSoket"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".presentation.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:alwaysRetainTaskState="true"/>
        <activity
            android:name=".presentation.connect.ConnectActivity"
            android:label="@string/app_name"/>

        <activity
            android:name=".presentation.registration.RegistrationActivity"
            android:label="@string/title_registration"/>
        <activity
            android:name=".presentation.avtarization.AuthorizationActivity"
            android:label="@string/title_authorization"/>
        <activity android:name=".presentation.scen.CreateScenActivity"
            android:label="@string/title_create_scen"/>

        <activity android:name=".presentation.about.AboutActivity"
            android:label="@string/title_about"/>

        <activity android:name=".presentation.profile.ProfileActivity"
            android:label="@string/title_profile"/>

        <activity android:name=".presentation.game.GameActivity"
            android:label="@string/app_name"/>

        <activity
            android:name=".presentation.splash.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.soket.WebSocketService"/>
        <service android:name=".service.soket.ImulyatorSocketService"/>



    </application>

</manifest>
